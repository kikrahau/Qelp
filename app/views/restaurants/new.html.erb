<%= form_for @restaurant, url: {action: "create"}, html: {class: "restaurant_form"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>
  <%= f.label :rating %>
  <%= f.range_field :rating, in: 1..5 %>
  <%= f.submit "Create" %>
<% end %>