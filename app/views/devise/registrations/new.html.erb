<section class="col-xs-8 col-xs-offset-2">
<h2>Sign up</h2>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :username, for: "exampleInputEmail1" %><br />
  <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Enter Username" %></div>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %></div>

  <div class="form-group"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %></div>

  <div class="form-group"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %></div>

  <div class="form-group"><%= f.label :Profile_picture %><br />
  	<%= f.file_field :image,id:"exampleInputFile" %></div>
    <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
<% end %>
<%= render "rails/shared/links" %>
</section>
